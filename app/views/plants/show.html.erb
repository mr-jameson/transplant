<h1><%=@plant.name%></h1>

<div><%= image_tag @plant.image if @plant.image.attached? %></div>

<p><%= link_to "edit", edit_plant_path(@plant) if current_user.id == @plant.user_id %></p>

<button data-stripe="payment">Buy <%= number_to_currency((@plant.price)/100) %></button>
<p>Seller: <%= link_to @plant.user.name, user_path(@plant.user.id) %></p>
<p>Description: <%= @plant.description %></p>
<p>Location: <%= @plant.address.suburb if @plant.address %></p>
<p>Light Requirements: <%= @plant.light.capitalize %></p>
<p>Size: <%= @plant.size.capitalize %></p>
<p>Pot: <%= @plant.pot %></p>
<p>Delivery Method: <%= @plant.postage %></p>

<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>