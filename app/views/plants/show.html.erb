<%= render "/pages/navbar", plant: @plant, user: @user, address: @address %>

<h1><%=@plant.name%></h1>

<%= current_user.id %>
<%= @plant.user_id %>
<%= link_to "edit", edit_plant_path(@plant) if current_user.id == @plant.user_id %>

<div class="images"><%= image_tag @plant.image if @plant.image.attached? %></div>

<button data-stripe="payment">Buy <%= number_to_currency((@plant.price)/100) %></button>
<p>Seller:<%= link_to @plant.user.name, user_path(@plant.user.id) %></p>
<p>Description:<%= @plant.description %></p>
<p>Location:<%= @plant.address.suburb if @plant.address %></p>
<p>Light Requirements:<%= @plant.light %></p>
<p>Size:<%= @plant.size %></p>
<p>Pot:<%= @plant.pot %></p>
<p>Delivery Method:<%= @plant.postage %></p>

<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>