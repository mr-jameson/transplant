<%= render "/pages/navbar", plant: @plant, user: @user, address: @address %>

<h1><%=@plant.name%></h1>

<%= link_to "edit", edit_plant_path(@plant) if current_user.id == @plant.user_id %>

<%= image_tag @plant.image if @plant.image.attached? %>
<h2><%= @plant.name %></h2>

<button data-stripe="payment">Pay <%= number_to_currency(@plant.price) %></button>

<p><%= @plant.price %></p>
<p><%= @plant.description %></p>
<p><%= @plant.address.suburb if @plant.address %></p>
<p><%= @plant.light %></p>
<p><%= @plant.size %></p>
<p><%= @plant.pot %></p>
<p><%= @plant.postage %></p>
<p><%= link_to current_user.name, user_path(current_user.id) %></p>
<%= link_to "edit", edit_plant_path(@plant.id) %>

<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>