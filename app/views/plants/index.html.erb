<%= render "/pages/navbar", plant: @plant, user: @user, address: @address %>

<h1>Plant Listings</h1>

<% for plant in @plants %>
<div class="card">
        <%= image_tag plant.image if plant.image.attached? %>
        <h2><%= link_to plant.name, plant_path(plant) %></h2>
        <p><%= plant.price %></p>
        <p><%= plant.description %></p>
        <p><%= plant.address.suburb if plant.address %></p>
        <p><%= plant.light %></p>
        <p><%= plant.size %></p>
        <p><%= plant.pot %></p>
        <p><%= plant.postage %></p>
        <% if plant.user == current_user %>
            <%= link_to "edit", edit_plant_path(plant.id) %>
        <% end %>
</div>
<% end %>